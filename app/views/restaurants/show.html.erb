<div class="container">
  <h2><%= @restaurant.name %></h2>
  <p><%= @restaurant.category.capitalize %></p>
  <p><%= @restaurant.address %></p>
  <p><%= @restaurant.phone_number %></p>
</div>

<hr>

<div class="container">
  <ul class="list-group">
    <% @restaurant.reviews.each do |review| %>
      <li class="list-group-item"><%= review.content %> - <%= "⭐" * review.rating %></li>
    <% end %>
  </ul>
</div>

